    </servlet-mapping>

    <servlet>
        <servlet-name>classifyChangeServlet</servlet-name>
        <servlet-class>handle.classifyChange</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>classifyChangeServlet</servlet-name>
        <url-pattern>/classifyChangeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>toCartServlet</servlet-name>
