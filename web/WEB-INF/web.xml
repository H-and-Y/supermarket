        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exitServlet</servlet-name>
        <servlet-class>handle.Exit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exitServlet</servlet-name>
        <url-pattern>/exitServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addGoodsServlet</servlet-name>
        <servlet-class>handle.addGoods</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGoodsServlet</servlet-name>
